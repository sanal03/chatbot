# Groq API Key - Get it from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Provider selection: 'groq' (default) or 'openai'
PROVIDER=groq

# OpenAI API Key (if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Enable web search retrieval (set to 'true' to enable)
USE_WEB_SEARCH=false

# Bing Web Search API key (Azure Cognitive Services)
# If USE_WEB_SEARCH=true the server will call Bing Web Search and summarize results with the LLM
BING_API_KEY=your_bing_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000
